function help_global (){
  text_help_global | less
}
function type_operation_select(){
      case $menu_select in
        --bootloader-update)
            pre_mount_work
            transactional_operation_1
            bootloader_update
              ;;
        --restore-root)
            pre_mount_work
            restore_root
              ;;
        --reset-sysadmin-data)
            pre_mount_work
            reset_sysadmin_data
              ;;
        --edit-pacmanroot)
            pre_mount_work
            transactional_operation_1
            edit_pacman_root
              ;;
        --pos-restore)
            transactional_operation_2
            bootloader_update
            ;;
   esac

  
}
function pre_mount_work(){
toplevel_dir=$(mktemp -d -p /tmp)
update_grub_command="grub-mkconfig -o /boot/grub/grub.cfg"
mount $block_device_root $toplevel_dir -o "subvolid="5
}
function transactional_operation_1(){
moment=$(date +%Y-%m-%d--%H-%M-%S)
commit_name="@commit-root$menu_select"
    mv $toplevel_dir/$default_head $toplevel_dir/$commit_name--$moment &&\
    btrfs su cr $toplevel_dir/$default_head &&\
    btrfs su snap $toplevel_dir/@commit-root$menu_select--$moment/$default_root $toplevel_dir/$default_head/$default_root &&\
    transactional_operation_2
}
function transactional_operation_2(){
transactional_dir=$(mktemp -d -p /tmp) 
    mount $block_device_root $transactional_dir -o "subvol="$default_head/$default_root &&\
      mount --bind /usr/local/ $transactional_dir/usr/local/ &&\
      mount --bind /etc/grub.d $transactional_dir/etc/grub.d &&\
      mount --bind /etc/default/grub $transactional_dir/etc/default/grub &&\
      mount --bind /etc/default/grub-btrfs/ $transactional_dir/etc/default/grub-btrfs/ &&\
      mount --bind /etc/pacman.d/ $transactional_dir/etc/pacman.d &&\
      mount --bind /etc/pacman.conf $transactional_dir/etc/pacman.conf &&\
      mount --bind /etc/mkinitcpio.conf $transactional_dir/etc/mkinitcpio.conf &&\
      mount --bind /etc/mkinitcpio.d $transactional_dir/etc/mkinitcpio.d &&\
      mount --bind /var/cache/pacman/pkg $transactional_dir/var/cache/pacman/pkg
}
function end_base_manager(){
    umount -Rv $transactional_dir &&\
    mv $toplevel_dir/$default_head/$default_root $toplevel_dir/@transactional &&\
    btrfs su snap -r $toplevel_dir/@transactional $toplevel_dir/$default_head/$default_root &&\
    btrfs filesystem sync $toplevel_dir &&\
    btrfs su del $toplevel_dir/@transactional &&\
    umount -Rv $toplevel_dir &&\
    rmdir $transactional_dir &&\
    rmdir $toplevel_dir &&\
    echo "commit transicionado com sucesso, reinicie para ver o resultado" &&\
    exit 0
}
function end_base_manager_error(){
    umount -Rv $transactional_dir &&\
    btrfs su del $toplevel_dir/$default_head/$default_root &&\
    mv $toplevel_dir/$commit_name--$moment $toplevel_dir/$default_head &&\
    umount -Rv $toplevel_dir &&\
    rmdir $transactional_dir &&\
    rmdir $toplevel_dir &&\
    echo "um erro ocorreu na atual transação de commit. O commit bem suscedido mais recente foi promovido. Saindo com status de erro" &&\
    exit 1

}
