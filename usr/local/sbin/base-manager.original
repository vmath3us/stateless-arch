function help_bootloader_update(){
  printf "
  --bootloader-update
  
  Adicione e remova parâmetros de kernel, ou outras customizações que queira,
  em /etc/default/grub, ou /etc/grub.d, conforme a documentação oficial.
  Você deve editar o SEU /etc/default/grub, não via --edit-pacmanroot,
  e usar base-manager --bootloader-update também FORA de --edit-pacmanroot.
  Pode ser usado após --restore-root
  "

}

########################################################################################################################

function bootloader_update(){
  moment=$(date +%Y-%m-%d--%T)
  mount $block_device_root $toplevel_dir -o "subvolid="5 &&\
  btrfs su snap -r $toplevel_dir/$default_root $toplevel_dir/@commit-root--pre-update-grub--$moment &&\
  btrfs filesystem sync $toplevel_dir &&\
  umount $toplevel_dir &&\
  bootloader_update_p2
}
function bootloader_update_p2(){
  mount $block_device_root $update_grub_dir -o "subvol="$default_root &&\
      mount --bind /usr/local/ $update_grub_dir/usr/local/ &&\
      mount --bind /etc/grub.d $update_grub_dir/etc/grub.d &&\
      mount --bind /etc/default/grub $update_grub_dir/etc/default/grub &&\
      mount --bind /etc/default/grub-btrfs/ $update_grub_dir/etc/default/grub-btrfs/ &&\
      mount --bind /etc/pacman.d/ $update_grub_dir/etc/pacman.d &&\
      mount --bind /etc/pacman.conf $update_grub_dir/etc/pacman.conf &&\
      mount --bind /etc/mkinitcpio.conf $update_grub_dir/etc/mkinitcpio.conf &&\
      mount --bind /etc/mkinitcpio.d $update_grub_dir/etc/mkinitcpio.d &&\
  echo "entrando em ambiente chroot" &&\
  bootloader_update_p3
}
function bootloader_update_p3(){
  arch-chroot $update_grub_dir $update_grub_command
  if [ $? -eq 0 ] ; then
    umount -Rv $update_grub_dir &&\
    printf "a configuração do bootloader foi atualizada com sucesso"
  else
    umount -Rv $update_grub_dir &&\
    printf "A atualização de configuração do bootloader saiu com status de erro, reveja suas customizações"
  fi
}

